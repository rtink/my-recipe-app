<%= render 'shared/errors', obj: @recipe %>

<div class='container'>
<div class='row justify-content-start'>
   <div class='w-100'>
    <%= form_for(@recipe, :html => {class: 'form-group', role: 'form' }) do |f| %>
    <div class='form-group row'>
      <div class='form-control-label col-2'>
        <%= f.label :name %>
      </div>
      <div class='col-10'>
        <%= f.text_field :name, class: 'form-control border border-info', 
                             placeholder: 'Name of recipe', autofocus: true %>
      </div>
    </div>
    <div class='form-group row'>
      <div class='form-control-label col-2'>
        <%= f.label :description %>
      </div>
      <div class='col-10'>
        <%= f.text_area :description, rows: 10, class: 'form-control border border-info',
                         placeholder: 'Enter steps to create recipe' %>
      </div>
    </div>
    <div class='form-group row'>
      <div class='col-8'>
        <div class="input-group">
        <%= f.collection_check_boxes :ingredient_ids,
                           Ingredient.all, :id, :name do |cb| %>
        <% cb.label(class: "input-group-addon input_checkbox") { cb.check_box(class: "checkbox") + cb.text } %>
        <% end %>
      </div>
      </div>
    </div>
    <div class='form-group'>
      <div class='col-10 offset-2'>
          <%= f.submit class: 'btn btn-primary btn-sm btn-xlarge' %>
      </div>
    </div>
    <% end %>
  </div>
</div>
    <div class='col-10 offset-2 colormatch'>
      [<%= link_to 'Cancel', recipes_path %>]
    </div>
  </div>
</div>
</div>