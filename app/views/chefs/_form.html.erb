<%= render 'shared/errors', obj: @chef %>

<div class='container'>
<div class='row justify-content-start'>
   <div class='w-100'>
    <%= form_for(@chef, :html => {class: 'form-group', role: 'form' }) do |f| %>
    <div class='form-group row'>
      <div class='form-control-label col-2'>
        <%= f.label :chefname, "Choose Chefname" %>
      </div>
      <div class='col-10'>
        <%= f.text_field :chefname, class: 'form-control border border-info', 
                             placeholder: 'Enter your name', autofocus: true %>
      </div>
    </div>
    <div class='form-group row'>
      <div class='form-control-label col-2'>
        <%= f.label :email %>
      </div>
      <div class='col-10'>
        <%= f.email_field :email, class: 'form-control border border-info',
                         placeholder: 'Enter your email' %>
      </div>
    </div>
     <div class='form-group row'>
      <div class='form-control-label col-2'>
        <%= f.label :password %>
      </div>
      <div class='col-10'>
        <%= f.password_field :password, class: 'form-control border border-info',
                         placeholder: 'Choose a password' %>
      </div>
    </div>
    <div class='form-group row'>
      <div class='form-control-label col-2'>
        <%= f.label :password_confirmation, "Confirm Password" %>
      </div>
      <div class='col-10'>
        <%= f.password_field :password_confirmation, class: 'form-control border border-info',
                         placeholder: 'Confirm password' %>
      </div>
    </div>
    <div class='form-group'>
      <div class='col-2 '>
          <%= f.submit(@chef.new_record? ? "Create my account" : "Update my account",
                                      class: 'btn btn-primary btn-sm btn-xlarge') %>
      </div>
    </div>
    <% end %>
  </div>
</div>
    <div class='col-6 colormatch'>
      [<%= link_to 'Cancel', recipes_path %>]
    </div>
  </div>
</div>
</div>