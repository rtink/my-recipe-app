<%= render 'shared/errors', obj: @ingredient %>

<div class='container'>
<div class='row justify-content-start'>
   <div class='w-100'>
    <%= form_for(@ingredient, :html => {class: 'form-group', role: 'form' }) do |f| %>
    <div class='form-group row'>
      <div class='form-control-label col-2'>
        <%= f.label :name %>
      </div>
      <div class='col-10'>
        <%= f.text_field :name, class: 'form-control border border-info', 
                             placeholder: 'Enter ingredient', autofocus: true %>
      </div>
    </div>
    
    <div class='form-group'>
      <div class='col-2'>
          <%= f.submit(@ingredient.new_record? ? "Add Ingredient" : "Update Ingredient",
                 class: 'btn btn-primary btn-sm btn-xlarge') %>
      </div>
    </div>
    <% end %>
  </div>
</div>
    <div class='col-6 colormatch'>
      [<%= link_to 'Cancel', recipes_path %>]
    </div>
  </div>
</div>
</div>