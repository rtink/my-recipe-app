<%= render 'shared/page_title', title: 'login' %>

<div class='container'>
<div class='row justify-content-start'>
   <div class='w-100'>
    <%= form_for(:session, :html => {class: 'form-group', role: 'form' }, url: login_path) do |f| %>
    <div class='form-group row'>
      <div class='form-control-label col-2'>
        <%= f.label :email %>
      </div>
      <div class='col-10'>
        <%= f.email_field :email, class: 'form-control border border-info',
                         placeholder: 'Enter your email' %>
      </div>
    </div>
     <div class='form-group row'>
      <div class='form-control-label col-2'>
        <%= f.label :password %>
      </div>
      <div class='col-10'>
        <%= f.password_field :password, class: 'form-control border border-info',
                         placeholder: 'Enter your password' %>
      </div>
    </div>
    <div class='form-group'>
      <div class='col-2'>
          <%= f.submit "Log in", class: 'btn btn-primary btn-sm btn-xlarge' %>
      </div>
    </div>
    <% end %>
  </div>
</div>
    <div class='col-6 colormatch'>
      [<%= link_to 'Cancel', recipes_path %>] <br>
      [<%= link_to "Don't have an account? Sign up now!", signup_path %>]
    </div>
  </div>
</div>
</div>